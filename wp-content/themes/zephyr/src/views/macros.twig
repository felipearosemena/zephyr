{% macro img( id , size, imgClass ) %}

  {% set image = TimberImage(id) %}
  {% set src = image.src(size) %}

  {% if src %}

    {% set width = image.sizes[size].width|default(image.width) %}
    {% set height = image.sizes[size].height|default(image.height) %}

    <img
      {{ imgClass  ? 'class="' ~ imgClass ~ '"' }}
      width="{{ width }}"
      height="{{ height }}"
      src="{{ src }}"
      alt="{{ image.alt }}"
      title="{{ image.title }}" >

  {% endif %}

{% endmacro %}
