{% set image = TimberImage(term.meta('thumbnail_id')) %}

<shape-item
  href="{{ term.path }}"
    padding-bottom="{{ image.height / image.width * 100 }}%"
   :term='{{ term|json_encode }}'
   label="{{ label }}">

  <template slot="svg">
    {% include 'components/shapes/' ~ term.name ~ '.svg' %}
  </template>

  <template slot="image">
    <thumbnail :image="{ src: '{{ image.src }}', alt: '{{ image.alt }}', sizes: {} }" size="">
    </thumbnail>
  </template>

</shape-item>
