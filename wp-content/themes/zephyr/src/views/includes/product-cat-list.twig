<section class="section section--product-cat-list">
  <div class="container container--xxl">

    <div class="grid grid--full grid--shapes">
      {% for term in terms %}
        <div class="grid__item w-12-12 w-md-6-12 anim-trigger">
          {% include 'components/shape-item.twig' with {
            term: term,
            label: term.slug in ['basics'] ? 'view styles' : 'view cut'
          } %}
        </div>
      {% endfor %}
      <div class="grid__item w-12-12 w-md-6-12">
        <div class="container container--flush container--xxs">
          <a href="{{ shop_path }}" class="btn mb-2">View All Products</a>
        </div>
      </div>
    </div>


  </div>
</section>
