{% if section.columns %}
  <section class="section section--card-columns">

    <div class="container container--md">

      {% if section.title %}
        <h2 class="h3 mb-2">{{ section.title }}</h2>
      {% endif %}

      <div class="grid grid--flex grid--rows grid--wide">

        {% for col in section.columns %}
          <div class="grid__item flex w-12-12 w-md-4-12">

            {{ col.content }}

          </div>
        {% endfor %}
      </div>

    </div>

  </section>
{% endif %}
