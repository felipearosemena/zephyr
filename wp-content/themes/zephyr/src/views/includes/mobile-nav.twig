<nav id="mobile-nav" class="modal mobile-nav">

  <div class="modal__inner mobile-nav__inner">

    {% include 'components/search-form.twig' with {
      namespace: 'mobile-search'
    } %}

    <div class="container container--md">

      <ul class="mobile-nav__menu">

        {% for item in main_menu.get_items %}
          <li class="{{ item.classes|join(' ') }}">

            <a href="{{ item.get_link }}" target="{{ item.is_external ? '_blank' }}">
              {{ item.title }} 
            </a>

            {% if item.children %}
            
            <span class="mobile-nav__toggle js-toggle" 
              data-target="#mobile-sub-menu-{{ loop.index }}" 
              data-group="#mobile-nav" 
              data-toggle="true">
            </span>

            <ul id="mobile-sub-menu-{{ loop.index }}" class="mobile-nav__sub-menu">
              {% for child in item.get_children %}
              <li class="{{child.classes|join(' ') }}">
                <a href="{{ child.get_link }}" target="{{ child.is_external ? '_blank' }}">
                  {{ child.title }}
                </a>
              </li>
              {% endfor %}
            </ul>
            {% endif %}

          </li>
        {% endfor %}

      </ul>

      <ul class="mobile-nav__icons">
        {% if global_info.global_facebook %}
          <li><a href="{{ global_info.global_facebook }}" class="icon-facebook" target="_blank"></a></li>
        {% endif %}
        
        {% if global_info.global_twitter_profile %}
          <li><a href="{{ global_info.global_twitter_profile }}" class="icon-twitter" target="_blank"></a></li>
        {% endif %}
      </ul>

    </div>

  </div>

  {% include 'components/global-cta.twig' with {
    className: 'mobile-nav__cta'
  } %}
</nav>
