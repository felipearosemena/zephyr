<section class="fs-panes">
  <div class="fs-panes__color w-12-12 w-md-6-12">
    <img class="fs-panes__image" src="{{ post.thumbnail.src }}"/>
  </div>

  <div class="fs-panes__content w-12-12 w-md-6-12">
      <div class="fs-panes__content-table">
        <div class="fs-panes__content-cell">
          <div class="container container--sm">
            <h1 class="h3 mb-2">{{ post.title }}</h1>

            {{ post.content }}
          </div>
        </div>
      </div>
  </div>
</section>
